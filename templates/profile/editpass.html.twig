{% extends 'base.html.twig' %}

{% block title %}Modification du mot de passe de {{ app.user.firstname }} {{ app.user.name }}{% endblock %}

{% block body %}
<header id="head" class="secondary"></header>
<!-- container -->
<div class="container">

	<ol class="breadcrumb">
		<li>
			<a href="{{path('app_users')}}">Accueil</a>
		</li>
		<li class="active">Modification mot de passe</li>
	</ol>
	<div class="grix xs4 container">
		{% for message in app.flashes('error') %}
		<div class="col-xs4">
			<div class="p-3 my-2 rounded-2 error">{{message}}</div>
		</div>
		{% endfor %}
		<div class="col-xs4">
			<h1>Modification du mot de passe de {{ app.user.firstname }} {{ app.user.name }}</h1>
			<form method="post">
				<div class="form-field">
					<label for="pass">Mot de passe</label>
					<input type="password" id="pass" name="pass" class="form-control">
				</div>
				<div class="form-field">
					<label for="pass2">Confirmer le mot de passe</label>
					<input type="password" id="pass2" name="pass2" class="form-control">
				</div>
				<button class="btn blue">Valider</button>

			</form>
		</div>
	</div>
</div>
{% endblock %}