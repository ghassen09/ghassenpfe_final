{% extends 'base.html.twig' %}


{% block title %}
{% if app.user %}
{{ app.user.firstname }}
{{ app.user.name }}
{% else %}
solixy
{% endif %}
{% endblock %}

{% block stylesheet %}
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/axentix@0.5.3/dist/css/axentix.min.css">
<script src="https://polyfill.io/v3/polyfill.min.js?features=default"></script>
<style>
	.message {
		z-index: 1;
		height: 20%;
		font-weight: 20%;
	}
</style>


{% endblock %}
{% block body %}

<body class="home">
	<!-- Fixed navbar -->



	<div id="mapid" style="width:100%; height:600px;"></div>

	<a href="{{ path("app_messages_send") }}"><img src="{{ asset("assets/images/messenger.png") }}" width="50"
			class="messenger-icon" /></a>


	<link rel="stylesheet" href="https://unpkg.com/leaflet@1.7.1/dist/leaflet.css" />
	<script src="https://unpkg.com/leaflet@1.7.1/dist/leaflet.js"></script>
	<script>
		let map, marqueur //variable pour la carte
		window.onload = () => {
			map = L.map('mapid').setView([51.505, -0.06], 4);
			{% for key, user in users%}
				console.log("{{ user.longitude}}");
				console.log("{{ user.lat}}");

				addMarker({"lat":{{ user.lat }}, "lng":{{ user.longitude}} });
				
			{% endfor %}
			L.tileLayer('https://{s}.tile.openstreetmap.org/{z}/{x}/{y}.png', {
				attribution: '© <a href="https://www.openstreetmap.org/copyright">OpenStreetMap</a> contributors'
			}).addTo(map)
			

		}

		function addMarker(pos) {
			//on verifie si un marqueur existe
			
			
			marqueur = L.marker(pos, {
				//on rend le marquer délaçable
				draggable: true
			})
			//on écoute le glisser/déposer sur le marqueur
			marqueur.on("dragend", function (e) {
				pos = e.traget.getLarLng()
				document.querySelector("#lat").value = pos.lat
				document.querySelector("#long").value = pos.lng

			})
			
			marqueur.addTo(map)
		}
	</script>

	{% endblock %}