{% extends 'base.html.twig' %}

{% block title %}Register
{% endblock %}

{% block body %}


<header id="head" class="secondary"></header>
<!-- container -->
<div class="container">

	<ol class="breadcrumb">
		<li>
			<a href="{{path('app_home')}}">Home</a>
		</li>
		<li class="active">Registration</li>
	</ol>

	<div class="row">

		<!-- Article main content -->
		<article class="col-xs-12 maincontent">
			<header class="page-header">
				<h1 class="page-title">Registration</h1>
			</header>

			<div class="col-md-6 col-md-offset-3 col-sm-8 col-sm-offset-2">
				<div class="panel panel-default">
					<div class="panel-body">
						<h3 class="thin text-center">S’inscrire</br>
							C’est rapide et facile.</h3>
						<p class="text-center text-muted">En appuyant sur S’inscrire, vous acceptez nos Conditions
							générales, notre Politique d’utilisation des données et notre Politique d’utilisation des
							cookies. Vous recevrez peut-être des notifications par texto de notre part et vous pouvez à
							tout moment vous désabonner.
						</p>
						<hr>

						{{ form_start(registrationForm) }}
						<div class="row top-margin">
							<div class="col-sm-6">
								{{ form_label(registrationForm.name, 'Nom Utilisateur') }}
								{{ form_widget(registrationForm.name, {'attr': {'class': 'form-control'}}) }}
							</div>

							<div class="col-sm-6">
								{{ form_label(registrationForm.firstname, 'Prénom') }}
								{{ form_widget(registrationForm.firstname, {'attr': {'class': 'form-control'}}) }}
							</div>
						</div>
						<div class="row top-margin">
							<div class="col-sm-5">
								{{ form_label(registrationForm.datenais, 'Date de Naissance') }}
								{{ form_widget(registrationForm.datenais, {'attr': {'class': 'form-control'}}) }}

							</div>
							<div class="col-sm-5">
								{{form_widget(registrationForm.image,{'attr':{'class':'form-control'}})}}

							</div>
						</div>
						<div class="row top-margin">
							<div class="col-sm-6">
								{{ form_label(registrationForm.langue, 'Langue') }}
								{{ form_widget(registrationForm.langue, {'attr': {'class': 'form-control'}}) }}
							</div>

							<div class="col-sm-6">
								{{ form_label(registrationForm.job, 'Profession') }}
								{{ form_widget(registrationForm.job, {'attr': {'class': 'form-control'}}) }}
							</div>
						</div>
						<div class="row top-margin">
							<div class="col-sm-12">
								{{ form_label(registrationForm.email, 'Adresse Email') }}
								{{ form_widget(registrationForm.email, {'attr': {'class': 'form-control'}}) }}
							</div>
						</div>



						<div class="row top-margin">
							<div class="col-sm-6">
								{{ form_label(registrationForm.plainPassword, 'Mot de Passe') }}
								{{ form_widget(registrationForm.plainPassword, {'attr': {'class': 'form-control'}})
								}}
							</div>

						</div>

						<hr>

						<div class="row">
							<div class="col-lg-8">
								{{ form_widget(registrationForm.agreeTerms) }} <a href="#">Termes d'utilisations</a>
								I've read the <a href="">Terms and Conditions</a>
							</div>
							<div class="col-lg-4 text-right">
								<button class="btn btn-action" type="submit">S’inscrire</button>
								{{ form_end(registrationForm) }}
							</div>
						</div>
						</form>

					</div>
				</div>

			</div>

		</article>
		<!-- /Article -->

	</div>
</div> <!-- /container -->





{% endblock %}