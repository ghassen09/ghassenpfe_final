{% extends 'basemessage.html.twig' %}

{% block title %}Messagerie
{% endblock %}

{% block body %}
<div class="container-fluid">
	<div class="row">
		<div class="col-12">
			<div class="row">


				<div class="col-12 col-sm-5 col-md-4 col-xl-3 linear-gradient border">
					<div class="row">
						<div class=" col-12">

							</br>
							</br>
							</br>
							</br>
							</br>
							</br>




						</div>
					</div>

					<div class="row">
						<div class=" col-12 mb-2">
							<img class="img-fluid rond" src="{{app.user.image}}" />
						</div>
					</div>

					<div class="row">
						<div class="col-12 texte" id="surname">
							<h3 contentEditable="True">{{ app.user.firstname }}
								{{ app.user.name }}</h3>
								<a href="{{ path("app_users") }}"><p class="underline">Acceuil </a><br />
							<a href="{{ path("app_messages_send") }}">
								<p class="underline">Envoyer Message
							</a></p>
							<a href="{{ path("app_messages_received") }}">
								<p class="underline">Boite de réception {{ app.user.recieved|length }}
							</a><br />
							<a href="{{ path("app_messages_send") }}">
								<p class="underline">Messages envoyés {{ app.user.sent|length }}
							</a><br />





							</br></br><br>



							<a href="{{path('app_logout')}}">Déconnexion</a>
							</p>
						</div>
					</div>
					</br></br></br>



					<div class="row text-center mb-3">
						<div class="col-4">
							<button class="btn"><img class="img-fluid img-adaptation animation" /></button>
						</div>
						<div class="col-4">
							<button class="btn"> <img class="img-fluid img-adaptation animation"/></button>
						</div>
						<div class="col-4">
							<button class="btn"><img class="img-fluid img-adaptation animation" /></button>



							<!--         <button onclick = "changeColor('blue');">Bleu</button> 
                                    <button onclick = "changeColor('green');">Vert</button> 
                                    <button onclick = "changeColor('red');">Rouge</button>
                                    <button onclick = "changeColor('yellow');">Jaune</button> 
                  -->
						</div>
					</div>
				</div>



				<div class="col-12 col-sm-7 col-md-8  col-xl-7 border blanc">
					<div class="row">
						<div class="col-12 texte2 orange">
							Messageries
						</div>
					</div>



					
						<div class="row">
							<div class="col-12">
								<h1>Messagerie</h1>
								<h2>Eléments envoyés</h2>
								<p>Vous avez envoyé
									{{ app.user.sent|length }}
									messages</p>
							</div>
							<div class="col-5">A</div>
							<div class="col-3">Contenu</div>
							<div class="col-3">Date</div>
							<div class="col-1">Actions</div>
							{% for message in app.user.sent %}
							{% set bold = "" %}


							<div class="col-5 {{bold}}">{{ message.sender.email }}</div>
							<div class="col-3 {{bold}}">
								{{ message.message }}
							</div>
							<div class="col-3 {{bold}}">{{ message.createdAt|date }}</div>
							<div class="col-1">
								<a href="{{ path("app_messages_delete", {id: message.id}) }}">
									<svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor"
										class="bi bi-file-excel-fill text-danger" viewbox="0 0 16 16">
										<path
											d="M12 0H4a2 2 0 0 0-2 2v12a2 2 0 0 0 2 2h8a2 2 0 0 0 2-2V2a2 2 0 0 0-2-2zM5.884 4.68L8 7.219l2.116-2.54a.5.5 0 1 1 .768.641L8.651 8l2.233 2.68a.5.5 0 0 1-.768.64L8 8.781l-2.116 2.54a.5.5 0 0 1-.768-.641L7.349 8 5.116 5.32a.5.5 0 1 1 .768-.64z" />
									</svg>
								</a>
							</div>
							{% endfor %}


							<div>
							
								<a href="{{path("app_messages_received")}}" ><button type="button" class="btn btn-warning">Boites de réceptions</button></a>
								<a href="{{path("app_messages_send")}}" ><type="button" class="btn btn-warning">Envoyer un message</button></a>
							</div>
						</div>
					

</div>

				<div></div>
				
				
			</div>


		</div>
	</div>
</div>
</div>
{% endblock %}
