{% extends 'base.html.twig' %}

{% block title %}Se connecter
{% endblock %}

{% block body %}



		<header id="head" class="secondary"></header>

		<!-- container -->
		<div class="container">

			

			<div
				class="row">

				<!-- Article main content -->
				<article class="col-xs-12 maincontent">
					<header class="page-header">
						<h1 class="page-title">Se connecter</h1>
					</header>

					<div class="col-md-6 col-md-offset-3 col-sm-8 col-sm-offset-2">
						<div class="panel panel-default">
							<div class="panel-body">
								<h3 class="thin text-center">Connecter à votre compte</h3>
								<p class="text-center text-muted">
									<a href="{{path('app_register')}}">Créer un nouveau compte</a>
									
								</p>
								<hr>

								<form method="post">
                                {% if error %}
		<div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
	{% endif %}

	{% if app.user %}
		<div class="mb-3">
			Vous êtes connecté en tant que
			{{ app.user.userIdentifier }},
			<a href="{{ path('app_logout') }}">Déconnexion</a>
		</div>
	{% endif %}
									<div class="top-margin">
										<label for="inputEmail">Email
											<span class="text-danger">*</span>
										</label>
										<input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control" autocomplete="email" required autofocus>
									</div>
									<div class="top-margin">
										<label for="inputPassword">Mot de passe
											<span class="text-danger">*</span>
										</label>
										<input type="password" name="password" id="inputPassword" class="form-control" autocomplete="current-password" required>
									</div>
									<input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
									<hr>

									<div class="row">
										
										<div class="col-lg-12 text-center">
											<button class="btn btn-action" type="submit">Se connecter</button>
										</div>
									</div>
								</form>
							</div>
						</div>

					</div>

				</article>
				<!-- /Article -->

			</div>
		</div>
		<!-- /container -->


		

		

	{% endblock %}

